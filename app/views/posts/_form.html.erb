<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Create New Project</h1>
  </div>
    <div class="panel-body">
      <%= form_for @post do |f| %>
        <div class='form-group'>
          <%= f.label "Share your project with us." %>
          <%= f.text_area :description, rows: 5, class: "form-control" %>
        </div>
        <div class='form-group'>
          <%= f.label "Categories" %>
          <%= f.collection_select :category_ids, Category.order(:name), :id, :name, include_blank: true %>   
        </div>
        <div class='form-group'>
          <fieldset id="post-bounties">      
              <%= f.fields_for :bounties do |bounty| %>
                <%= render 'bounty_fields', f: bounty %>
              <% end %>       
            <%= link_to_add_association 'Add Bounty!', f, :bounties %>
          </fieldset>                                     
        </div>          
        <%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-success')%>
      <% end %>
    </div>
</div>

